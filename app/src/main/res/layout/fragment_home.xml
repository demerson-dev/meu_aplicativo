<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/textTitleListaTreinos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA DE TREINOS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para lista dinâmica de treinos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTreinos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/textTitleListaTreinos"
        app:layout_constraintBottom_toTopOf="@id/btnCriarTreino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_treino" />

    <!-- Mensagem quando não há treinos -->
    <TextView
        android:id="@+id/textEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum treino cadastrado.\nClique em '+ Criar treino' para adicionar."
        android:textSize="16sp"
        android:textColor="#999999"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewTreinos"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewTreinos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de criar treino -->
    <Button
        android:id="@+id/btnCriarTreino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_criar_treino"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>