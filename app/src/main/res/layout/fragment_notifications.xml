<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Botão de voltar (seta) -->
        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Voltar"
            app:tint="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Título da tela -->
        <TextView
            android:id="@+id/textTitleDetalhesTreino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_detalhes_treino"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="48dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnVoltar"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card com detalhes do treino -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalhesTreino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/textTitleDetalhesTreino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nome do Treino -->
                <TextView
                    android:id="@+id/labelNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nome"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textNomeTreino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treino de Peito"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Séries e Repetições -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Séries -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_series_detalhes"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textSeries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Repetições -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_repeticoes_detalhes"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textRepeticoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Exercícios -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_exercicios_lista"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textExercicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supino reto\nSupino inclinado\nCrucifixo"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- Observações -->
                <TextView
                    android:id="@+id/labelObservacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_observacoes_detalhes"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textObservacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descansar 60s entre séries"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão Excluir Treino -->
        <Button
            android:id="@+id/btnExcluirTreino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_excluir_treino"
            android:textSize="16sp"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardDetalhesTreino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
